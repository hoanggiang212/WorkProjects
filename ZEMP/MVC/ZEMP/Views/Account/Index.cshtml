@using ZEMP.DAO;
@model ZEMP.DAO.ZEMP_USER
@{
    Layout = null;
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/Content/bootstrap.min.3.3.6.css" type="text/css" />

<div class="container" style="width:300px;margin-top:80px;">
    <h2 style="text-align:center;">Login</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="info">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <label for="Username">Username:</label>
        @*<input type="text" class="form-control" id="username" placeholder="Enter email" name="username">*@
        @Html.TextBoxFor(m => m.Username, new { @placeholder = "Enter Username", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        <label for="Password" style="margin-top:15px;">Password:</label>
        @*<input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd">*@

        @Html.PasswordFor(m => m.Password, new { @placeholder = "Enter Password", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <input type="submit" value="Log in" class="btn btn-primary center-block " style="width:100%;margin-top:15px;" />
    }
</div>




