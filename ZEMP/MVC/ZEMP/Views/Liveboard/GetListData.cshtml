<table id="table1" class="tablesorter hasFilters @ViewBag.ClassName">
    <thead>
        <tr>
            @if (Model.SelectedMode == "NGANH")
            {
                <th>Ngành</th>
            }
            else if (Model.SelectedMode == "KHUVUC")
            {
                <th>Khu Vực</th>
            }
            else if (Model.SelectedMode == "WRKCT")
            {
                <th>Work Center</th>
            }
            else
            {
                <th class="col-chuyen">Chuyền</th>
            }
            <th>Công Đoạn</th>
            <th>SL LĐ</th>
            <th>N.Suất</th>
            <th>Giờ LV</th>
            <th>KH Giờ</th>
            <th>KH Ngày</th>
            <th>Thực Hiện</th>
            <th>+/-</th>
            <th>% TH/KH</th>
            <th>Trc.08h</th>
            <th>08h</th>
            <th>09h</th>
            <th>10h</th>
            <th>11h</th>
            <th>12h</th>
            <th>13h</th>
            <th>14h</th>
            <th>15h</th>
            <th>16h</th>
            <th>17h</th>
            <th>18h</th>
            <th>Sau 19h</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["SL_Online"] != null)
            {
                foreach (SanLuongOnline slsx in (List<SanLuongOnline>)ViewData[CommonHeader.VIEWDATA_SL_ONLINE])
                {
                <tr>
                    <td class="col-chuyen">@slsx.BoPhan</td>
                    <td class="col-congdoan">@slsx.CongDoan</td>
                    <td class="col-slld">@slsx.SoLuongLaoDong.ToString("#,#")</td>
                    <td class="col-nsuat">@slsx.NangSuat.ToString("#,#.##")</td>
                    <td class="col-giolv">@slsx.GioLamViec.ToString("#,#.##")</td>
                    <td class="col-khgio">@slsx.KeHoachGio.ToString("#,#")</td>
                    <td class="col-khth"> @slsx.KeHoachNgay.ToString("#,#")</td>
                    <td class="col-khth">@slsx.ThucHien.ToString("#,#")</td>
                    <td class="col-khth">@slsx.ChenhLech.ToString("#,#")</td>
                    @if (@slsx.DatSanLuong > 0)
                    {
                        <td class="col-khth @slsx.sColorText" style="text-align:right">@slsx.DatSanLuong.ToString("#,#.##") %</td>
                    }
                    else
                    {
                        <td class="col-khth @slsx.sColorText" style="text-align:right">0 %</td>
                    }
                    <td class="col-truoc-sau">@slsx.Truoc8h.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio08.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio09.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio10.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio11.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio12.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio13.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio14.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio15.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio16.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio17.ToString("#,#")</td>
                    <td class="col-gio">@slsx.Gio18.ToString("#,#")</td>
                    <td class="col-truoc-sau">@slsx.Sau18.ToString("#,#")</td>
                </tr>
            }
        }
    </tbody>
</table>
