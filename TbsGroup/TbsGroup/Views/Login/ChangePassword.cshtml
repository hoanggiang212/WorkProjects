@using TbsGroup.Models
@using TbsGroup.ViewModels
@model UserManager
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.3.3.6.css" rel="stylesheet" />

<div class="container" style="width:300px;margin-top:80px;">
    <h2 style="text-align:center;">Change information</h2>
    <div class="text-success">@ViewBag.SuccessChangePassword</div>
    @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="info">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div>
            <label for="Username">Username @Model.Username.ToUpper()</label>
        </div>
            <label for="Password" style="margin-top:15px;">Current Password:</label>

        @Html.PasswordFor(m => m.CurrentPassword, new { @placeholder = "Enter Current Password",
       @class = "form-control", autocomplete = "off"})
        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })


        <label for="Password" style="margin-top:15px;">New Password:</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter New Password", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

        <label for="Password" style="margin-top:15px;">Confirm New Password:</label>
        @Html.PasswordFor(m => m.PasswordCofirm, new { @class = "form-control", @placeholder = "Confirm New Password", autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.PasswordCofirm, "", new { @class = "text-danger" })


        <label for="Text" style="margin-top:15px;">Họ Và Tên</label>
        @Html.TextBoxFor(m => m.JobPosition, new { @class = "form-control", @placeholder = "Job Position", @value= @Model.JobPosition })
        @Html.ValidationMessageFor(m => m.JobPosition, "", new { @class = "text-danger" })

        <input type="submit" value="Submit" class="btn btn-default center-block" style="width:100%;margin-top:15px;" />
    }
</div>
