@using TbsGroup.Models
@using TbsGroup.ViewModels
@model UserManager
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reset Password</h2>
<div class="text-success">@ViewBag.SuccessChangePassword</div>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Current Password" })
                        @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.PasswordCofirm, new { @class = "form-control", @placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(m => m.PasswordCofirm, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.JobPosition, new { @class = "form-control", @placeholder = "Job Position" })
                        @Html.ValidationMessageFor(m => m.JobPosition, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Change Password" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

